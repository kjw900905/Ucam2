<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_alignParentBottom="@+id/text_room_interests"
        android:layout_alignParentEnd="true"
        android:id="@+id/text_room_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="21dp"
        android:id="@+id/text_room_interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_room_title"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_room_title"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_room_interests"
        android:layout_alignBottom="@+id/text_room_interests"
        android:layout_alignParentEnd="true"
        android:id="@+id/text_room_num_people" />

</RelativeLayout>