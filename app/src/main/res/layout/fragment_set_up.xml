<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/set_up_layout"
    tools:context=".SetUpFragment">

    <TextView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:id="@+id/color_Test" />

    <Button
        android:text="설정완료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:id="@+id/btn_set_Color" />

    <HorizontalScrollView
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginRight="82dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/color_Test">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="68dp"
                android:id="@+id/select_Color"
                android:layout_marginEnd="68dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Light_Purple"
                    android:background="#CCCCFF"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Light_Red"
                    android:background="#FF6666"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Sky_Blue"
                    android:background="#66FFFF"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Yellow_Green"
                    android:background="#00f000"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Green"
                    android:background="#00CC00"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Yellow"
                    android:background="#FFFA00"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Pink"
                    android:background="#FF00FF"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Light_Brown"
                    android:background="#CC9966"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Dark_Brown"
                    android:background="#663300"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Black"
                    android:background="#000000"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Dark_Orange"
                    android:background="#FF9900"
                    android:layout_weight="1" />

                <RadioButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:buttonTint="#ffffff"
                    android:gravity="center"
                    android:id="@+id/color_Lime"
                    android:background="#66FF99"
                    android:layout_weight="1" />

            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>